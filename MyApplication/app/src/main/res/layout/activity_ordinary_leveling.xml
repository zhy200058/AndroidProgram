<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrdinaryLeveling">

    <include layout="@layout/original_leveling_title"/>//加载“普通水准测量记录”布局

    <GridLayout
        android:id="@+id/GridLayout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/original_leveling_title"
        android:rowCount="1"
        android:columnCount="8">

        <TextView
            android:id="@+id/cezhan_grid"
            android:text="测站"
            android:textSize="24dp"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <TextView
            android:id="@+id/dianhao_grid"
            android:text="点号"
            android:textSize="24dp"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <TextView
            android:id="@+id/shiju_grid"
            android:text="视距"
            android:textSize="24dp"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <TextView
            android:id="@+id/houshi_grid"
            android:text="后视"
            android:textSize="24dp"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <TextView
            android:id="@+id/qianshi_grid"
            android:text="前视"
            android:textSize="24dp"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <TextView
            android:id="@+id/gaocha_grid"
            android:text="高差"
            android:textSize="24dp"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <TextView
            android:id="@+id/gaocheng_grid"
            android:text="高程"
            android:textSize="24dp"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <TextView
            android:id="@+id/beizhu_grid"
            android:text="备注"
            android:textSize="24dp"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

    </GridLayout>//表格title

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/GridLayout_title"
        android:rowCount="2"
        android:columnCount="8">

        <EditText
            android:id="@+id/cezhan"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <EditText
            android:id="@+id/dianhao1"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="20dp"
            android:background="@drawable/edit_background"/>

        <EditText
            android:id="@+id/dianhao2"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_column="1"
            android:textSize="20dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <EditText
            android:id="@+id/shiju1"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_column="2"
            android:textSize="20dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <EditText
            android:id="@+id/shiju2"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_column="2"
            android:textSize="20dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <EditText
            android:id="@+id/houshi"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:textSize="20dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <EditText
            android:id="@+id/qianshi"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="4"
            android:textSize="20dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <EditText
            android:id="@+id/gaocha"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="5"
            android:textSize="20dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <EditText
            android:id="@+id/gaocheng"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="6"
            android:textSize="20dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>

        <EditText
            android:id="@+id/beizhu"
            android:layout_width="20dp"
            android:maxLines="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="7"
            android:textSize="20dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/edit_background"/>



    </GridLayout>//表格记录栏
</RelativeLayout>